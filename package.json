{
    "name": "nmctheme",
    "version": "0.1.0",
    "description": "MagentaCLOUD theme for Nextcloud",
    "author": "T-Systems International",
    "type": "module",
    "dependencies": {
        "@nextcloud/axios": "^2.3.0",
        "@nextcloud/event-bus": "^3.1.0",
        "@nextcloud/files": "^3.0.0-beta.10",
        "@nextcloud/initial-state": "^2.0.0",
        "@nextcloud/router": "^2.1.2",
        "@nextcloud/vue": "^7.12.0",
        "@telekom/design-tokens": "^1.0.0-beta.8",
        "pinia": "^2.1.6",
        "vue": "^2.7.14"
    },
    "devDependencies": {
        "@nextcloud/babel-config": "^1.0.0",
        "@nextcloud/browserslist-config": "^2.3.0",
        "@nextcloud/eslint-config": "^8.2.1",
        "@nextcloud/stylelint-config": "^2.3.1",
        "@nextcloud/webpack-vue-config": "^5.5.1",
        "sass": "^1.66.1",
        "vue-template-compiler": "^2.7.14",
        "@vue/tsconfig": "^0.4.0",
        "css-loader": "^6.8.1",
        "sass-loader": "^13.3.2",
        "style-loader": "^3.3.1",
        "throttle-debounce": "^5.0.0",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "vue-loader": "^15.9.8",
        "webpack": "^5.79.0",
        "webpack-cli": "^5.1.4"
    },
    "//": "seems to be needed to make it work atm",
    "overrides": {
        "stylelint": "^15.10.3"
    },
    "scripts": {
        "build": "npm run sass && npm run sass:icons",
        "lint": "eslint js",
        "lint:fix": "eslint js --fix",
        "build:webpack": "webpack --node-env development --progress",
        "build:watch": "webpack --node-env development --progress --watch",
        "stylelint": "stylelint css",
        "stylelint:fix": "stylelint css --fix",
        "sass": "sass --style compressed --load-path css css/",
        "sass:watch": "sass --watch --load-path css css/",
        "sass:icons": "node js/icons.js",
        "postinstall": "cp node_modules/@telekom/design-tokens/dist/telekom/css/telekom-design-tokens.all.css dist/telekom-design-tokens.all.css"
    }
}
