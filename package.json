{
    "name": "nmctheme",
    "version": "0.1.0",
    "description": "MagentaCLOUD theme for Nextcloud",
    "author": "T-Systems International",
    "dependencies": {
        "@floating-ui/dom": "^1.5.3",
        "@nextcloud/axios": "^2.3.0",
        "@nextcloud/event-bus": "^3.1.0",
        "@nextcloud/files": "^3.0.0-beta.22",
        "@nextcloud/initial-state": "^2.0.0",
        "@nextcloud/l10n": "^2.1.0",
        "@nextcloud/router": "^2.1.2",
        "@nextcloud/typings": "^1.7.0",
        "@nextcloud/vue": "8.0.0-beta.5",
        "@telekom/design-tokens": "^1.0.0-beta.9",
        "pinia": "^2.1.6",
        "vue": "^2.7.14"
    },
    "devDependencies": {
        "@nextcloud/babel-config": "^1.0.0",
        "@nextcloud/browserslist-config": "^3.0.0",
        "@nextcloud/eslint-config": "^v8.3.0",
        "@nextcloud/sharing": "^0.1.0",
        "@nextcloud/stylelint-config": "^2.3.1",
        "@nextcloud/webpack-vue-config": "^6.0.0",
        "@types/jest": "^29.5.5",
        "@vue/tsconfig": "^0.5.1",
        "css-loader": "^6.8.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mock-xmlhttprequest": "^8.2.0",
        "sass": "^1.68.0",
        "sass-loader": "^13.3.2",
        "style-loader": "^3.3.1",
        "throttle-debounce": "^5.0.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "vue-loader": "^15.10.2",
        "vue-template-compiler": "^2.7.14",
        "webpack": "^5.79.0",
        "webpack-cli": "^5.1.4"
    },
    "//": "seems to be needed to make it work atm",
    "overrides": {
        "stylelint": "^15.10.3"
    },
    "scripts": {
        "build": "webpack --node-env production --progress",
        "build:dev": "webpack --node-env development --progress",
        "build:watch": "webpack --node-env development --progress --watch",
        "postbuild": "npm run sass && npm run sass:icons",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "stylelint": "stylelint css",
        "stylelint:fix": "stylelint css --fix",
        "sass": "sass --style compressed --load-path css css/",
        "sass:watch": "sass --watch --load-path css css/",
        "sass:icons": "node src/icons.mjs",
        "postinstall": "mkdir -p dist && sed 's/data-mode/data-themes*/g' node_modules/@telekom/design-tokens/dist/telekom/css/telekom-design-tokens.all.css > dist/telekom-design-tokens.all.css",
        "test": "jest --verbose",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage"
    }
}
